{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "eslint-plugin-nitpick",
  "version": "0.6.0",
  "description": "An ESLint plugin for nitpicky rules.",
  "main": "index.js",
  "files": [
    "index.js",
    "lib",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "test": "mocha",
    "test:watch": "mocha --watch",
    "test:coverage": "nyc mocha",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "build:docs": "eslint-doc-generator"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ej-shafran/eslint-plugin-nitpick.git"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "javascript",
    "typescript"
  ],
  "author": "ej-shafran",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ej-shafran/eslint-plugin-nitpick/issues"
  },
  "peerDependencies": {
    "eslint": ">=0.8.0"
  },
  "homepage": "https://github.com/ej-shafran/eslint-plugin-nitpick#readme",
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@commitlint/types": "^18.4.4",
    "eslint": "^8.54.0",
    "eslint-doc-generator": "^1.6.1",
    "eslint-plugin-eslint-plugin": "^5.1.1",
    "eslint-plugin-n": "^16.3.0",
    "husky": "^9.0.7",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^3.0.3"
  },
  "publishConfig": {
    "@ej-shafran:registry": "https://npm.pkg.github.com"
  }
}
